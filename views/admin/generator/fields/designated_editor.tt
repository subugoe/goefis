<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="id_designated_editor">
      {% designated_editor.label %}
    </label>
    {% IF designated_editor.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <input type="hidden" id="designated_editor_orig_first_name_0" value="" />
      <input type="hidden" id="designated_editor_orig_last_name_0" value="" />
      <div class="form-group col-md-4 col-xs-11">
        <div class="input-group sticky{% IF designated_editor.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">{% designated_editor.first_name.label %}</div>
          <div class="input-group-addon ">{% designated_editor.first_name.label_short %}</div>
          <input type="text" name="designated_editor.0.first_name" id="designated_editor_first_name_0" value="[% designated_editor.0.first_name %]" class="form-control sticky"{% IF designated_editor.mandatory %} required{% END %}>
	      <div class="input-group-addon"></div>
	    </div>
	  </div>
	  <div class="form-group col-md-6 col-xs-11">
	    <div class="input-group sticky{% IF designated_editor.mandatory %} mandatory{% END %}">
	      <div class="input-group-addon ">{% designated_editor.last_name.label %}</div>
	      <div class="input-group-addon ">{% designated_editor.last_name.label_short %}</div>
	      <input type="text" name="designated_editor.0.last_name" id="designated_editor_last_name_0" value="[% designated_editor.0.last_name %]" class="form-control sticky"{% IF designated_editor.mandatory %} required{% END %}>
	      <div class="input-group-addon"><span id="designated_editor_link_person_0" onclick="link_person(this);" data-type="designated_editor_">biNotAuthorized.png</span></div>
          <div class="input-group-addon"><span id="designated_editor_revert_0" data-type="designated_editor_" onclick="revert_name(this);">[undo]</span></div>
	    </div>
	  </div>
	</div>
  </div>
</div>
