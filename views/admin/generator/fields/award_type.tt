<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="select_award_type">
      {% award_type.label %}
    </label>
    {% IF award_type.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10" id="award_type">
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF award_type.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">{% award_type.label %}</div>
          <select name="rec_type" class="sticky form-control{% IF award_type.mandatory %} required{% END %}" id="select_award_id">
            <option value=""[% IF !rec_type %] selected="selected"[% END %]>--- Select ---</option>
            <option value="akademie"[% IF rec_type == "akademie" %] selected="selected"[% END %]>Akademie</option>
            <option value="preis"[% IF rec_type == "preis" %] selected="selected"[% END %]>Preis</option>
            <option value="auszeichnung"[% IF rec_type == "auszeichnung" %] selected="selected"[% END %]>Auszeichnung</option>
          </select>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
