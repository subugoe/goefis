<!-- BEGIN frontdoor/tab_ebi_ref.tt -->
<div class="tab-pane" id="ebi_references">

  <h3>[% epmc_ref.total %] Reference[% IF epmc_ref.total != "1" %]s[% END %]</h3>
  <p>[% lf.frontdoor.tabs.epmc_references.data_by %]</p>
  [% FOREACH reference IN epmc_ref.entries.nsort('citedOrder') %]
  <div class="row[% UNLESS loop.first %] [% END %]">
    <div class="col-md-12">
    [% IF reference.id %]
    <a href="http://europepmc.org/abstract/MED/[% reference.id %]">[% reference.title %]</a><br />
    [% ELSE %]
    [% reference.title %]<br />
    [% END %]
    [% reference.authorString %], [% IF reference.journalAbbreviation %] <em>[% reference.journalAbbreviation %]</em> [% reference.volume %]([% reference.issue %]),[% END %] [% reference.pubYear %]
    [% IF reference.id %]<br />PMID: <a href="http://europepmc.org/abstract/MED/[% reference.id %]">[% reference.id %]</a>[% END %]
    </div>
  </div>
  [% END %]

</div>
<!-- END frontdoor/tab_ebi_ref.tt -->
