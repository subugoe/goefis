<!-- BEGIN pubtheses/dropzone.tt -->

[% ddc = h.get_list('ddc') %]

[% IF qp.success %]
  <div class="alert alert-success" role="alert">[% lf.main_page.theses_success_text %]</div>
[% END %]

<div id="dropzone_row" class="row">
     <p>[% lf.main_page.theses_explain %]</p>

    <div class="dropzone" id="thesesUpload"></div>

    <p><a href="/docs/howto/policy#depositpolicy">[% lf.main_page.depositpolicy %]</a></p>

    <p><a href="#ddc_list" data-target="#ddc_list" data-toggle="collapse">[% lf.main_page.ddc %]</a><br />
    <p class="collapse" id="ddc_list">
    [% FOREACH key IN ddc.keys.sort %]
    [% ddc.$key.optgroup %]<br />
    [% FOREACH subkey IN ddc.$key.keys.sort %]
    [% NEXT IF subkey == "optgroup" %]
    [% ddc.$key.$subkey %]<br />
    [% END %]
    [% END %]
    </p>


  <div class="dropzone-previews col-md-12" id="theses_dz_preview"></div>

</div>

<script>
$(document).ready(function(){
	Dropzone.options.thesesUpload.dictDefaultMessage = "[% lf.main_page.theses_drop_text %]";
});
</script>

<!-- END pubtheses/dropzone.tt -->
