[% thematic_area_list = h.get_list('thematic_area') %]
<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="select_thematic_area">
      [% lf.$type.field.thematic_area.label %]
    </label>
    {% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10 col-xs-12" id="thematic_area">
    {% IF fields.basic_fields.thematic_area.multiple OR fields.supplementary_fields.thematic_area.multiple %}
    [% IF !thematic_area %]
    <div class="row innerrow multirow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.thematic_area.label_short || lf.$type.field.thematic_area.label %]</div>
          <select name="thematic_area.0" id="select_thematic_area" class="sticky form-control{% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %} required{% END %}">
            <option value="" selected="selected">[% lf.$type.field.thematic_area.select_thematic_area %]</option>
            [% FOREACH ta IN thematic_area_list.keys %]
              <option value="[% ta %]">[% thematic_area_list.$ta %]</option>
            [% END %]
          </select>
          <div class="input-group-addon" onclick="add_field('thematic_area'[% IF lf.$type.field.thematic_area.placeholder %],'[% lf.$type.field.thematic_area.placeholder %]'[% END %]);">[+]</div>
          <div class="input-group-addon" onclick="remove_field(this);">[-]</div>
        </div>
      </div>
    </div>
    [% ELSE %]
    [% FOREACH th_ar IN thematic_area %]
    <div class="row innerrow multirow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.thematic_area.label_short || lf.$type.field.thematic_area.label %]</div>
          <select name="thematic_area.[% loop.index %]" class="sticky form-control{% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %} required{% END %}">
            <option value="">[% lf.$type.field.thematic_area.select_thematic_area %]</option>
            [% FOREACH ta IN thematic_area_list.keys %]
              <option value="[% ta %]"[% IF th_ar == ta %] selected="selected"[% END %]>[% thematic_area_list.$ta %]</option>
            [% END %]
          </select>
          <div class="input-group-addon" onclick="add_field('thematic_area'[% IF lf.$type.field.thematic_area.placeholder %],'[% lf.$type.field.thematic_area.placeholder %]'[% END %]);">[+]</div>
          <div class="input-group-addon" onclick="remove_field(this);">[-]</div>
        </div>
      </div>
    </div>
    [% END %]
    [% END %]
    {% ELSE %}
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.thematic_area.label_short || lf.$type.field.thematic_area.label %]</div>
          <select name="thematic_area.0" id="select_thematic_area" class="sticky form-control{% IF fields.basic_fields.thematic_area.mandatory OR fields.supplementary_fields.thematic_area.mandatory %} required{% END %}">
            <option value=""[% IF !thematic_area %] selected="selected"[% END %]>[% lf.$type.field.thematic_area.select_thematic_area %]</option>
            [% FOREACH ta IN thematic_area_list.keys %]
              <option value="[% ta %]"[% IF thematic_area.0 == ta %] selected="selected"[% END %]>[% thematic_area_list.$ta %]</option>
            [% END %]
          </select>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
    {% END %}

  </div>
</div>