<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="id_issue">
      [% lf.$type.field.issue.label %]
    </label>
    {% IF fields.basic_fields.issue.mandatory OR fields.supplementary_fields.issue.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-3 col-xs-11">
        <div class="input-group sticky">
          <div class="input-group-addon ">[% lf.$type.field.issue.label %]</div>
          <input type="text" name="issue" id="id_issue" value="[% issue | html %]" placeholder="[% lf.$type.field.issue.placeholder %]" class="sticky form-control{% IF fields.basic_fields.issue.mandatory OR fields.supplementary_fields.issue.mandatory %} required{% END %}"{% IF fields.basic_fields.issue.readonly OR fields.supplementary_fields.issue.readonly %} readonly="readonly"{% END %}/>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
