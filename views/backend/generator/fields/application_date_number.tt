<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="id_application_date">
      [% lf.$type.field.application_date_number.label %]
    </label>
    {% IF fields.basic_fields.application_date_number.mandatory OR fields.supplementary_fields.application_date_number.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-3 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.application_date_number.mandatory OR fields.supplementary_fields.application_date_number.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.application_date_number.label_ad %]</div>
          <input type="text" name="application_date" id="id_application_date" value="[% application_date | html %]" placeholder="[% lf.$type.field.application_date_number.placeholder_ad %]" class="sticky form-control{% IF fields.basic_fields.application_date_number.mandatory OR fields.supplementary_fields.application_date_number.mandatory %} required{% END %}">
          <div class="input-group-addon"></div>
        </div>
      </div>
      <div class="form-group col-md-7 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.application_date_number.mandatory OR fields.supplementary_fields.application_date_number.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.application_date_number.label_an %]</div>
          <input type="text" name="application_number" id="id_application_number" value="[% application_number | html %]" placeholder="[% lf.$type.field.application_date_number.placeholder_an %]" class="sticky form-control{% IF fields.basic_fields.application_date_number.mandatory OR fields.supplementary_fields.application_date_number.mandatory %} required{% END %}">
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
