<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="id_year">
      [% lf.$type.field.year_extern.label %]
    </label>
    {% IF fields.basic_fields.year_extern.year.mandatory OR fields.supplementary_fields.year_extern.year.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-3">
    <div class="row innerrow">
      <div class="col-md-10 col-xs-11 form-group">
        <div class="input-group sticky{% IF fields.basic_fields.year_extern.year.mandatory OR fields.supplementary_fields.year_extern.year.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.year_extern.year.label_short || lf.$type.field.year_extern.year.label %]</div>
          <input type="text" name="year" id="id_year" value="[% year | html %]" maxlength="4" placeholder="[% lf.$type.field.year_extern.year.placeholder %]" class="sticky form-control{% IF fields.basic_fields.year_extern.year.mandatory OR fields.supplementary_fields.year_extern.year.mandatory %} required{% END %}"{% IF fields.basic_fields.year_extern.year.readonly OR fields.supplementary_fields.year_extern.year.readonly %} readonly="readonly"{% END %}>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-7">
    <div class="row innerrow">
      <div class="col-md-10 col-xs-11">
        <div class="checkbox">
          <label class="checkbox-inline">
            <input type="checkbox" name="extern" id="id_extern" value="1"[% IF extern %] checked="checked"[% END %]>
            [% lf.$type.field.year_extern.extern.placeholder %]
          </label>
        </div>
      </div>
    </div>
  </div>
</div>
