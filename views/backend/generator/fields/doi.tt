<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="id_doi">
      [% lf.$type.field.doi.label %]
    </label>
    {% IF fields.basic_fields.doi.mandatory OR fields.supplementary_fields.doi.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.doi.mandatory OR fields.supplementary_fields.doi.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.doi.label %]</div>
          <input type="text" name="doi" id="id_doi" value="[% doi | html %]" placeholder="[% lf.$type.field.doi.placeholder %]" class="sticky form-control{% IF fields.basic_fields.doi.mandatory OR fields.supplementary_fields.doi.mandatory %} required{% END %}"{% IF fields.basic_fields.doi.readonly OR fields.supplementary_fields.doi.readonly %} readonly="readonly" title="[% lf.$type.field.doi.title %]"{% END %}>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
