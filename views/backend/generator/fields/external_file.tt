[% IF external_file == "1" OR (doi AND title) %]
<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="id_external_file">
      [% lf.$type.field.external_file.label %]
    </label>
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="col-md-10 col-xs-11">
        <div class="checkbox">
          <label class="checkbox-inline">
            <input type="checkbox" value="1" name="external_file"[% IF external_file == "1" %] checked="checked"[% END %] />
            [% lf.$type.field.external_file.checkbox %] <a href="http://doi.org/[% doi %]" target="_blank">[% doi %]</a>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>
[% END %]