<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="keyword_0">
      [% lf.$type.field.keyword.label %]
    </label>
    {% IF fields.basic_fields.keyword.mandatory OR fields.supplementary_fields.keyword.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10" id="keyword">
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.keyword.mandatory OR fields.supplementary_fields.keyword.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.keyword.label %]</div>
          <input type="text" name="keyword" id="keyword_0" value="[% keyword.join(' ; ') %]" class="sticky form-control{% IF fields.basic_fields.keyword.mandatory OR fields.supplementary_fields.keyword.mandatory %} required{% END %}" placeholder="[% lf.$type.field.keyword.placeholder %]"{% IF fields.basic_fields.keyword.readonly OR fields.supplementary_fields.keyword.readonly %} readonly="readonly"{% END %}/>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
