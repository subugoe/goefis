[% language_preselect = h.get_list('language_preselect') %]
[% language_list = h.get_list('language') %]
<div class="row innerrow">
  <div class="col-md-2 ">
    <label for="select_original_language_0">
      [% lf.$type.field.original_language.label %]
    </label>
    {% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10" id="original_language">
    {% IF fields.basic_fields.original_language.multiple OR fields.supplementary_fields.original_language.multiple %}
    [% IF !original_language %]
    <div class="row innerrow multirow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.original_language.label_short || lf.$type.field.original_language.label %]</div>
          <select name="original_language.0.iso" class="sticky form-control{% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %} required{% END %}" id="select_original_language_0">
            [% FOREACH lang IN language_preselect %]
            <option value="[% lang %]"[% IF lang == language.iso || (!original_language AND lang=="eng") %] selected="selected"[% END %]>[% lf.language.$lang %]</option>
            [% END %]
            <option value="2436687"></option>
            [% FOREACH lang IN language_list.sort %]
            <option value="[% lang %]"[% IF lang == original_language.iso %] selected="selected"[% END %]>[% lf.language.$lang %]</option>
            [% END %]
          </select>
          <div class="input-group-addon" onclick="add_field('original_language');">[+]</div>
          <div class="input-group-addon" onclick="remove_field(this);">[-]</div>
        </div>
      </div>
    </div>
    [% ELSE %]
      [% FOREACH lan IN original_language %]
      <div class="row innerrow multirow">
        <div class="form-group col-md-10 col-xs-11">
          <div class="input-group sticky{% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %} mandatory{% END %}">
            <div class="input-group-addon ">[% lf.$type.field.original_language.label_short || lf.$type.field.original_language.label %]</div>
            <select name="original_language.[% loop.index %].iso" class="sticky form-control{% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %}[% IF loop.first %] required[% END %]{% END %}" id="select_original_language_[% loop.index %]">
              [% FOREACH lang IN language_preselect %]
              <option value="[% lang %]"[% IF lang == lan.iso %] selected="selected"[% END %]>[% lf.language.$lang %]</option>
              [% END %]
              <option value="2436687"></option>
              [% FOREACH lang IN language_list.sort %]
              <option value="[% lang %]"[% IF lang == lan.iso %] selected="selected"[% END %]>[% lf.language.$lang %]</option>
              [% END %]
            </select>
            <div class="input-group-addon" onclick="add_field('original_language');">[+]</div>
            <div class="input-group-addon" onclick="remove_field(this);">[-]</div>
          </div>
        </div>
      </div>
      [% END %]
    [% END %]
    {% ELSE %}
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %} mandatory{% END %}">
          <div class="input-group-addon ">[% lf.$type.field.original_language.label_short || lf.$type.field.original_language.label %]</div>
          <select name="original_language.0.iso" class="sticky form-control{% IF fields.basic_fields.original_language.mandatory OR fields.supplementary_fields.original_language.mandatory %} required{% END %}" id="select_original_language_0">
            [% FOREACH lang IN language_preselect %]
            <option value="[% lang %]"[% IF lang == original_language.iso || (!original_language AND lang=="eng") %] selected="selected"[% END %]>[% lf.language.$lang %]</option>
            [% END %]
            <option value="2436687"></option>
            [% FOREACH lang IN language_list.sort %]
            <option value="[% lang %]"[% IF lang == original_language.iso %] selected="selected"[% END %]>[% lf.language.$lang %]</option>
            [% END %]
          </select>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
    {% END %}
  </div>
</div>