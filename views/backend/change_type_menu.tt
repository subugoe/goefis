        [% IF pubtype != type %]
          <li><a href="#" class="change_type" data-val="[% h.config.forms.publicationTypes.$ptype.tmpl %]">[% h.config.language.$lang.forms.$pubtype.label %]</a></li>
        [% ELSE %]
          <li class="dropdown-header">[% h.config.language.$lang.forms.$pubtype.label %]</li>
        [% END %]
      [% END %]
