[% INCLUDE base/html_start.tt %]
[% INCLUDE partials/header.tt %]
[% lang = session.lang ? session.lang : h.config.default_lang -%]
[% lf = h.config.language.$lang -%]

<!-- BEGIN project/project.tt -->

<div class="row" itemid="project/[% _id %]"><!-- outer border -->
  <div class="col-md-11 col-sm-12">

    <div class="page-header">
      <ul class="breadcrumb">
        <li class="navbar-right">[% IF session AND session.user %]<a href="/logout" title="Logout"><span class="fw"></span>[% lf.main_page.logout %]</a>[% ELSE %]<a href="/login" title="[% lf.main_page.login %]"><span class="fw"></span>[% lf.main_page.login %]</a>[% END %]</li>
        [% IF session AND session.user %]<li class="navbar-right"><a href="/librecat" title="[% lf.main_page.logged_in_as %] [% session.user %]"><span class="fw"></span>[% session.user %]</a></li>[% END %]
      </ul>

      [% UNLESS name %]
        <h1>[% lf.frontdoor.no_record %]</h1>
      [% END %]
    </div>

    <div class="row ">

      <div class="col-md-8 col-xs-10"><!-- begin left col -->

      [% IF name %]
      <h1 itemprop="name">[% name %] ([% lf.hits.project %])</h1>
      [% END %]

      [% IF start_date %]
	<div class="row">
	  <div class="col-md-12">
	    [% lf.project.period %]: [% start_date %][% IF end_date %] &ndash; [% end_date %][% END %]
	  </div>
	</div>
	[% END %]
	<div class="row">
	  <div class="col-xs-10">
	  [% IF active %]
	    <em>Active</em>
	    [% IF sc39 OR funded %]|[% END %]
	  [% END %]
	  [% IF sc39 %]
	    <em>SC39</em>
	    [% IF funded %]|[% END %]
	  [% END %]
	  [% IF funded %]
	    <em>[% lf.project.funded_ext %]</em>
	  [% END %]
	  </div>
	</div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
	    <ul class="nav nav-tabs">
	      <li class="active"><a href="#project_details" data-toggle="tab">[% lf.frontdoor.tabs.details.label %]</a></li>
          [% IF project_publication %]<li><a href="#project_publications" data-toggle="tab">[% lf.tabs.publications %]</a></li>[% END %]
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8"><!-- tab-content -->
	<div class="tab tab-content">
	[% INCLUDE project/tab_details.tt %]
	<div class="tab-pane" id="project_publications">
         [% IF project_publication %]
           [% style = 'default' %]
           [% limit = project_publication.limit %]
           [% hits = project_publication.hits %]
           [% total = project_publication.total %]
           [% INCLUDE hits.tt %]
         [% END %]
	</div>
      </div>
    </div>

    </div><!-- end left col -->
  </div>
</div><!-- outer border -->

<!-- END project/project.tt -->

[% INCLUDE partials/footer.tt %]
[% INCLUDE base/html_end.tt %]
